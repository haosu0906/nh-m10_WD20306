    // Helper function to render schedule for a day
    function renderDaySchedule($schedule) {
        if (!$schedule) {
            echo '<div class="schedule-item status-available">S·∫µn s√†ng</div>';
            return;
        }

        $status = $schedule['status'] ?? 'available';
        $class = 'status-' . $status;
        $time = '';
        
        if ($schedule['start_time'] && $schedule['end_time']) {
            $time = $schedule['start_time'] . ' - ' . $schedule['end_time'];
        }

        $text = '';
        switch ($status) {
            case 'busy':
                $text = $time ?: 'B·∫≠n';
                if (!empty($schedule['location'])) {
                    $text .= ' - ' . htmlspecialchars(substr($schedule['location'], 0, 15));
                }
                break;
            case 'on_leave':
                $text = 'Ngh·ªâ ph√©p';
                break;
            case 'unavailable':
                $text = 'Kh√¥ng kh·∫£ d·ª•ng';
                break;
            default:
                $text = 'S·∫µn s√†ng';
        }

        echo '<div class="schedule-item ' . $class . '" title="' . htmlspecialchars($schedule['notes'] ?? '') . '">';
        echo $text;
        echo '</div>';
    }
